# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:7100
TICKET_ROUTE=tickets
PERSON_ROUTE=persons
CATEGORY_ROUTE=categories

# Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_NAME=maintenance-db
COSMOS_TICKET_CONTAINER=tickets
COSMOS_PERSON_CONTAINER=persons
COSMOS_CATEGORY_CONTAINER=categories

# Azure AD Configuration
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_SCOPES=User.Read,api://your-client-id/.default
AZURE_AD_REDIRECT_URI=http://localhost:7100/auth/callback
AZURE_AD_POST_LOGOUT_REDIRECT_URI=http://localhost:7100

# JWT Authentication Configuration
JWKS_URI=https://login.microsoftonline.com/common/discovery/v2.0/keys
JWT_AUDIENCE=your-app-audience
