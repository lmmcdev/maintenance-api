    {
      "name": "Attachments",
      "item": [
        {
          "name": "Upload Attachment (FormData)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": [],
                  "description": "The file to upload (required)"
                },
                {
                  "key": "filename",
                  "value": "example-file.pdf",
                  "type": "text",
                  "description": "Custom filename (optional, defaults to file.name)"
                },
                {
                  "key": "contentType",
                  "value": "application/pdf",
                  "type": "text",
                  "description": "Content type (optional, defaults to file.type)"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/{{apiVersion}}/tickets/{{ticketId}}/attachments",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiVersion}}", "tickets", "{{ticketId}}", "attachments"]
            },
            "description": "Upload a file attachment using multipart/form-data. The file will be stored in Azure Blob Storage and associated with the ticket."
          }
        },
        {
          "name": "Upload Attachment (Binary)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/pdf",
                "description": "Set to the actual MIME type of the file"
              }
            ],
            "body": {
              "mode": "file",
              "file": {
                "src": ""
              }
            },
            "url": {
              "raw": "{{baseUrl}}/{{apiVersion}}/tickets/{{ticketId}}/attachments?filename=scan0050.pdf",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiVersion}}", "tickets", "{{ticketId}}", "attachments"],
              "query": [
                {
                  "key": "filename",
                  "value": "scan0050.pdf",
                  "description": "Filename for the uploaded file"
                }
              ]
            },
            "description": "Upload a file attachment using binary data. Set Content-Type header to file's MIME type and filename as query parameter. Compatible with curl --data-binary."
          }
        },
        {
          "name": "List Ticket Attachments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/{{apiVersion}}/tickets/{{ticketId}}/attachments",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiVersion}}", "tickets", "{{ticketId}}", "attachments"]
            },
            "description": "Get all attachments for a specific ticket. Returns an array of attachment metadata."
          }
        },
        {
          "name": "Get Attachment by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
